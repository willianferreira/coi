<?xml version='1.0' encoding='utf-8'?>
<widget id="com.creative.coi" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>COI Odontologia</name>
    <description>
        A COI é uma clínica odontológica localizada em São Paulo/SP onde oferece diversos tipos de tratamentos dentários.
    </description>
    <author email="contato@creativenegocios.com" href="http://www.creativenegocios.com">
        Creative Negócios
    </author>
    <content src="index.html" />
    <icon src="icon.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access origin="whatsapp:*" launch-external="yes" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
